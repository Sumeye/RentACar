                        <div class="item form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="VergiDairesi">
                                Vergi Dairesi<span class="required">*</span>
                            </label>

                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input id="VergiDairesi" class="form-control " data-validate-length-range="6" data-validate-words="2" name="VergiDairesi" required="required" type="text">
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="Unvan">
                                Unvan<span class="required">*</span>
                            </label>

                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input id="Unvan" class="form-control" data-validate-length-range="6" data-validate-words="2" name="Unvan" required="required" type="text">
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="AdiSoyadi">
                                Adı Soyadı<span class="required">*</span>
                            </label>

                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input id="AdiSoyadi" class="form-control" data-validate-length-range="6" data-validate-words="2" name="AdiSoyadi" required="required" type="text">
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="sehir">
                                il  <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                @*@Html.DropDownListFor(model => model.SehirID, new SelectList(ViewBag.ilgetir, "SehirId", "sehir"), "Lütfen Seçiniz", new { @class = "form-control col-md-7 col-xs-12", id = "SehirID", name = "SehirID" })*@
