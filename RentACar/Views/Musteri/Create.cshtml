                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="Adres">
                                Adres<span class="required">*</span>
                            </label>

                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <textarea id="Adres" class="form-control" name="Adres" required="required"></textarea>
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">
                                Cinsiyet <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <select id="Cinsiyet" name="Cinsiyet" class="form-control">
                                  
