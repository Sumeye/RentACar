                                    <option selected disabled value="">Seçiniz</option>
                                    @foreach (var il in ViewBag.ilgetir)
                                    {
                                        <option value="@il.SehirId">@il.sehir</option>
                                    }
                                </select>

                            </div>
                        </div>


                        <div class="item form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="ilce">
                                ilçe  <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                @*@Html.DropDownListFor(model => model.ilceID, new SelectList(ViewBag.ilcegetir, "ilceId", "ilce"), "Lütfen Seçiniz", new { @class = "form-control col-md-7 col-xs-12", id = "ilceID", name = "ilceID" })*@
